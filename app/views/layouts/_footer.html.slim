.links
  ul
    li
      = link_to updates_path do
        span = inline_svg_tag('admin/gift.svg', size: '20')
        span = t('.updates')
        - count = Update.unread_count(current_admin)
        - if count&.positive?
          span.badge = count
    li
      = link_to handbook_path do
        span = inline_svg_tag('admin/book-open.svg', size: '20')
        span = t('.handbook')


.acp-admin
  = link_to 'https://acp-admin.ch' do
    span = inline_svg_tag('admin/logo.svg', size: '16')
    span = 'ACP Admin'

