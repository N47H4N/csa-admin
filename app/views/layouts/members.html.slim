doctype html
html
  head
    title = [Current.acp.name, t('.title')].join(' â€“ ')
    = stylesheet_link_tag 'members', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'members', 'data-turbolinks-track' => true
    = csrf_meta_tags
    meta charset="UTF-8"
    meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport"

  body data-locale=I18n.locale
    #body-wrapper
      = render 'layouts/members/header'
      = render 'layouts/flashes'
      = yield
    footer
      p = link_to_acp_website
      - if Current.acp.languages.many?
        ul.locales
          - Current.acp.languages.each do |locale|
            li = link_to locale, url_for(locale: locale), title: t("languages.#{locale}")
